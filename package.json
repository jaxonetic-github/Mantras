{
  "name": "mantras",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "react": "17.0.1",
    "react-native": "0.64.0",
    "react-native-navigation": "^7.13.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.14.0",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@testing-library/jest-native": "^4.0.1",
    "@testing-library/react-native": "^7.2.0",
    "babel-jest": "^26.6.3",
    "eslint": "7.14.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.64.0",
    "react-test-renderer": "17.0.1"
  },
  "jest": { 
     "preset": "react-native",
    "cacheDirectory": "./cache",
    "coverageThreshold": {
      "global": {
        "statements": 80
      }
    },
    "globals": {
      "__DEV__": true
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?!react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|polyfills|@sentry/.*)"
    ],
  "coverageDirectory": "./coverage/",
  "collectCoverage": true
}
}
